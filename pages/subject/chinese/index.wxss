.container {
  min-height: 100vh;
  background: #f5f7fa;
}

.header {
  background: #fff;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.content {
  padding: 30rpx;
}

.upload-btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 44rpx;
  margin-bottom: 30rpx;
  color: #3a7afe;
  border: 2rpx dashed #3a7afe;
}

.upload-btn .icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 24rpx;
  color: #999;
}

.homework-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.homework-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.homework-info {
  flex: 1;
}

.homework-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.homework-meta {
  font-size: 24rpx;
  color: #999;
}

.homework-status {
  font-size: 24rpx;
  color: #999;
  padding: 4rpx 16rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
}

.homework-status.active {
  color: #52c41a;
  background: #f6ffed;
}

.submit-btn {
  min-width: 140rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 24rpx;
  background: #3a7afe;
  color: #fff;
  border-radius: 28rpx;
  padding: 0 20rpx;
}

.submit-btn.submitted {
  background: #f5f5f5;
  color: #999;
} 