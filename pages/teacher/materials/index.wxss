.container {
  padding: 20rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.left-section {
  display: flex;
  align-items: center;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

.back-icon {
  margin-right: 6rpx;
  font-size: 32rpx;
}

.search-box {
  flex: 1;
  margin-right: 20rpx;
}

.search-input {
  background: #fff;
  height: 72rpx;
  border-radius: 36rpx;
  padding: 0 30rpx;
}

.upload-btn {
  width: 180rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: #3a7afe;
  color: #fff;
  border-radius: 36rpx;
  font-size: 28rpx;
}

.materials-list {
  padding: 20rpx 0;
}

.material-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.material-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.material-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.material-meta {
  font-size: 24rpx;
  color: #999;
  display: flex;
  gap: 20rpx;
}

.material-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-btn {
  min-width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
  background: #f5f7fa;
  color: #333;
}

.action-btn.delete {
  background: #ff4d4f;
  color: #fff;
}

.upload-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.close {
  font-size: 40rpx;
  color: #999;
}

.modal-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.modal-textarea {
  width: 100%;
  height: 200rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.select-file {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #f5f7fa;
  color: #333;
  margin-bottom: 20rpx;
}

.confirm-upload {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #3a7afe;
  color: #fff;
} 