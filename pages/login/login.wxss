.container {
  min-height: 100vh;
  background: #f5f7fa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-box {
  width: 85%;
  background: #fff;
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 50rpx;
  color: #333;
}

.role-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 50rpx;
}

.role-btn {
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  background: #f5f5f5;
  color: #666;
  border: none;
  transition: all 0.3s;
}

.role-btn::after {
  border: none;
}

.role-btn.active {
  background: #3a7afe;
  color: #fff;
}

.login-form {
  margin-top: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 44rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #333;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #3a7afe;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-top: 50rpx;
  transition: opacity 0.3s;
}

.login-btn:active {
  opacity: 0.8;
} 