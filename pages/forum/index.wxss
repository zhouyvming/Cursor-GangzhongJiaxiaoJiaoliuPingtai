.container {
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background: #e5effd;
  min-height: 100vh;
}

.forum-list {
  width: 93%; 
  position: absolute; 
  top: 0;
  left: 0;
  /* right: 0; */
}

.post-btn-wrapper {
  padding: 20rpx 0;
}

.post-btn {
  background: #3a7afe;
  color: #fff;
  border-radius: 36rpx;
  font-size: 28rpx;
  width: 200rpx;
}

.post-item {
  width: 100%;
  background: rgb(247, 219, 219);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: bold;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.post-content {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  /* line-height: 1.6; */
}

.post-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.post-actions {
  display: flex;
  gap: 20rpx;
}

.action-item {
  display: flex;
  align-items: center;
}

.count {
  color: #3a7afe;
  margin-right: 4rpx;
}

.post-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.close {
  font-size: 40rpx;
  color: #999;
}

.modal-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.modal-textarea {
  width: 100%;
  height: 300rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.confirm-post {
  background: #3a7afe;
  color: #fff;
}

.float-post-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: #3a7afe;
  opacity: 0.9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(58, 122, 254, 0.3);
}

.post-icon {
  color: #fff;
  font-size: 60rpx;
  font-weight: 300;
}

.loading-tip {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}